{
  "name": "cute-go",
  "private": true,
  "version": "2.1.0",
  "type": "module",
  "main": "electron/main.cjs", 
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on tcp:3001 && electron electron/main.cjs\"",
    "electron:build": "npm run build && electron-builder",
    "//--- 下面是新增的一键自动化脚本 ---": "",
    "version:sync": "node update-version.js",
    "icon:gen": "capacitor-assets generate --android",
    "//--- 终极懒人命令：版本同步 + 编译React + 生成图标 + 同步到安卓 ---": "",
    "make-android": "npm run version:sync && npm run build && npm run icon:gen && npx cap sync android"
  },
  "build": {
    "appId": "com.go.cutego",
    "productName": "CuteGo",
    "npmRebuild": false,
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "electron/preload.cjs",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/katago",
        "to": "katago"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico",
      "artifactName": "${productName}_Setup_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CuteGo",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true
    }
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@sabaki/immutable-gametree": "^1.9.4",
    "@sabaki/sgf": "^3.4.7",
    "@supabase/supabase-js": "^2.90.1",
    "electron-is-dev": "^3.0.1",
    "lucide-react": "^0.562.0",
    "peerjs": "1.5.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  }
}